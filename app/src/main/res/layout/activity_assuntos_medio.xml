<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intermediário.AssuntosMedio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"

            >

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_back"
                />

        </Toolbar>

        <Button
            android:id="@+id/btnEst"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:layout_below="@+id/toolbar"
            android:background="@drawable/decision"
            android:backgroundTint="@color/colorPrimary"
            android:enabled="true"
            />

        <TextView
            android:id="@+id/txEstrutura"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnEst"
            android:text="Estruturas de decisão"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btnEstComp"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:layout_below="@+id/txEstrutura"
            android:background="@drawable/dec"
            android:backgroundTint="@color/colorPrimary"
            android:enabled="true"
            />

        <TextView
            android:id="@+id/txEstComp"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnEstComp"
            android:text="Estruturas de decisão composta"
            android:layout_marginTop="5dp"/>

]
        <Button
            android:id="@+id/btnRep"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:layout_below="@+id/txEstComp"
            android:background="@drawable/loop"
            android:backgroundTint="@color/colorPrimary"
            android:enabled="true"
            />

        <TextView
            android:id="@+id/txRep"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnRep"
            android:text="Estruturas de repetição"
            android:layout_marginTop="5dp"/>



    </RelativeLayout>

</ScrollView>