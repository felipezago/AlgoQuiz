<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questoes.QuestoesMedio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"

            >

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_back"
                />

        </Toolbar>

        <TextView
            android:id="@+id/descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Qual foi a empresa criadora da linguagem de programação Java?"
            android:layout_below="@id/toolbar"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_margin="15dp"
            />

        <RadioGroup
            android:id="@+id/rdgrupo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/descricao">

            <RadioButton
                android:id="@+id/rdResposta1"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="IBM"
                />
            <RadioButton
                android:id="@+id/rdResposta2"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="NETBEANS"
                />
            <RadioButton
                android:id="@+id/rdResposta3"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="SUN MICROSYSTEMS"
                />
            <RadioButton
                android:id="@+id/rdResposta4"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="ORACLE"

                />

        </RadioGroup>

        <Button
            android:id="@+id/btnValida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proximo"
            android:layout_below="@+id/rdgrupo"
            android:layout_margin="30dp"
            android:background="#01770E"
            android:textColor="#ffffff"
            />

    </RelativeLayout>



</ScrollView>