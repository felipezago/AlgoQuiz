<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Avançado.ForEach">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"

        >

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_back"
            />

    </Toolbar>


    <TextView
        android:id="@+id/titulo"
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="For Each"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="For Each é uma estrutura de repetição, utilizado
para percorrer elementos em ArrayLists."
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titulo"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/desc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normalmente é utilizado para imprimir todos os
elementos da lista. Abaixo, um exemplo da declaração e utilização de
uma estrutura For Each"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/desc"
        android:layout_margin="15dp"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="381dp"
            android:layout_height="108dp"
            android:layout_below="@id/desc2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/foreachex" />

    <TextView
        android:id="@+id/desc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No código acima, a saída será de todos os itens da lista.
"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img"
        android:layout_margin="15dp"/>

    <Button
        android:id="@+id/btnProx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc3"
        android:text="Realizar o Teste"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:background="#FF0000"/>

    </RelativeLayout>


</ScrollView>